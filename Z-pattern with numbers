n=int(input()) 
l=[i for i in range(1,n+1)] 
print(*l) 
for i in range(n,n-1,-1): 
    for j in range(1,n-1): 
        print('* '*(i-j-1)+str(i-j),sep="\n") 
        
        j+=1  
print(*l)  


input: 5 

output: 1 2 3 4 5
        * * * 4 
        * * 3
        * 2 
        1 2 3 4 5 
        
        
