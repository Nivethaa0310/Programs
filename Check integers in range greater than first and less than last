n=int(input()) 
l=list(map(int,input().split()))
for i in range(1,len(l)-1): 
    if not(l[0]<l[i]<l[-1]): 
        print("NO") 
        break
    
else: 
    print("YES")
   
   
input 1:  5
          10 20 30 40 50 
          
output 1: YES 

input 2 : 5 
          10 20 30 40 25 
          
output 2: NO 

input 3: 5 
         10 10 10 10 10 
         
output 3: NO
