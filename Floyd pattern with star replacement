n=int(input()) 
x=int(input())
k=1 
for i in range(1,n+1): 
    for j in range(1,i+1): 
        if k%x!=0: 
            print(k,end=" ") 
            #k+=1
        else: 
            
            print("*",end=" ") 
        k+=1
    
    print() 
    
input : 4 5 

output: 1 
        2 3 
        4 * 6 
        7 8 9 *
